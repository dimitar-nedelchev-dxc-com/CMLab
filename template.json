{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "gitBranch": {
            "type": "string",
            "defaultValue": "refactor/parameter-files"
        },
        "location": {
            "type": "string",
            "defaultValue": "westeurope"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "linkedDeployment_VNet",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/dimitar-nedelchev-dxc-com/CMLab/', parameters('gitBranch'), '/vnet/template.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/dimitar-nedelchev-dxc-com/CMLab/', parameters('gitBranch'), '/vnet/parameters.json')]",
                    "contentVersion": "1.0.0.0"
                },
            }
        },
        {
            "name": "linkedDeployment_DC",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "dependsOn": [ "[resourceId('Microsoft.Resources/deployments', 'linkedDeployment_VNet')]" ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/dimitar-nedelchev-dxc-com/CMLab/', parameters('gitBranch'), '/dc/template.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/dimitar-nedelchev-dxc-com/CMLab/', parameters('gitBranch'), '/dc/parameters.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "name": "linkedDeployment_CM",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "dependsOn": [ "[resourceId('Microsoft.Resources/deployments', 'linkedDeployment_DC')]" ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/dimitar-nedelchev-dxc-com/CMLab/', parameters('gitBranch'), '/cm/template.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/dimitar-nedelchev-dxc-com/CMLab/', parameters('gitBranch'), '/cm/parameters.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "networkInterfaceName": {
                        "value": "cm01397"
                    },
                    "networkSecurityGroupName": {
                        "value": "CM01-nsg"
                    },
                    "networkSecurityGroupRules": {
                        "value": [
                            {
                                "name": "RDP",
                                "properties": {
                                    "priority": 300,
                                    "protocol": "TCP",
                                    "access": "Allow",
                                    "direction": "Inbound",
                                    "sourceAddressPrefix": "*",
                                    "sourcePortRange": "*",
                                    "destinationAddressPrefix": "*",
                                    "destinationPortRange": "3389"
                                }
                            }
                        ]
                    },
                    "subnetName": {
                        "value": "default"
                    },
                    "virtualNetworkId": {
                        "value": "[reference('linkedDeployment_VNet').outputs.resourceId.value]"
                    },
                    "publicIpAddressName": {
                        "value": "CM01-ip"
                    },
                    "publicIpAddressType": {
                        "value": "Dynamic"
                    },
                    "publicIpAddressSku": {
                        "value": "Basic"
                    },
                    "virtualMachineName": {
                        "value": "CM01"
                    },
                    "virtualMachineComputerName": {
                        "value": "CM01"
                    },
                    "virtualMachineRG": {
                        "value": "ConfigMgr-Academy-Test"
                    },
                    "osDiskType": {
                        "value": "StandardSSD_LRS"
                    },
                    "dataDisks": {
                        "value": [
                            {
